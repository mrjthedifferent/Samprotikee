<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_lay">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:src="@drawable/logo"
                android:id="@+id/sam"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version: 3.2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/version"
                android:layout_below="@id/sam"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_centerHorizontal="true"
                android:id="@+id/aboutline"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/version"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Us On Facebook"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:id="@+id/fblink"
                android:layout_below="@id/aboutline"
                android:textColor="#3a589b"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:id="@+id/fbicon"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/button"
                android:layout_toLeftOf="@+id/fblink"
                android:layout_toStartOf="@+id/fblink" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Follow Us On Twitter"
                android:background="@android:color/transparent"
                android:id="@+id/button"
                android:textColor="#598dca"
                android:layout_below="@+id/fblink"
                android:layout_alignLeft="@+id/fblink"
                android:layout_alignStart="@+id/fblink" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/twitter"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/button2"
                android:layout_toLeftOf="@+id/button"
                android:layout_toStartOf="@+id/button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Us On Google Plus"
                android:id="@+id/button2"
                android:background="@android:color/transparent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#dd5044"
                android:layout_below="@+id/button"
                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/gp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_lay">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By:"
                android:id="@+id/dev"
                android:padding="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1bbc9b"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/odepe"
                android:id="@+id/odepe"
                android:layout_below="@+id/dev"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We Complete your Project..!!\n\nVisit us for more info.."
                android:textColor="#1bbc9b"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/our"
                android:layout_below="@+id/odepe"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.odepe.net"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAllCaps="false"
                android:textColor="#1bbc9b"
                android:background="@android:color/transparent"
                android:id="@+id/button3"
                android:textStyle="bold"
                android:layout_below="@+id/our"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </RelativeLayout>


</ScrollView>